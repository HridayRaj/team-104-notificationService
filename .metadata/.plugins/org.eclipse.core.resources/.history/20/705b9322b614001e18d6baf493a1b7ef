package com.smsservice;


import com.twilio.Twilio;
import com.twilio.rest.api.v2010.account.Message;
import com.twilio.type.PhoneNumber;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RestController;

@RestController
public class HomeController {
	public static final String ACCOUNT_SID = System.getenv("ACe2ed96c2357a46ababdb2290b3eadab0");
    public static final String AUTH_TOKEN = System.getenv("f17dbbca0fcd453be9477167fa9957e8");
    
    
	@GetMapping("/")
	public String smsService() {
		return "sms service working fine";
	}
	
	@PostMapping("/send-sms")
	public void sendSms() {
		
		Twilio.init(ACCOUNT_SID, AUTH_TOKEN);
		Message message = Message.creator(
		    new PhoneNumber("+919110041083"),
		    new PhoneNumber("+12176693541"),
		    "Sample Twilio SMS using Java")
		.create();
		
		System.out.println(message.getSid());
	}
	
}
